---
import { Icon } from "astro-icon/components";

const { title, description, isMostPopular, features, index, length, slug } =
  Astro.props;
---

<div
  class={`border-stone-400 md:border-t md:border-b rounded-t-2xl py-8 px-4 gap-4 flex flex-col max-md:border
  ${index === 0 ? "md:border-l" : ""} 
  ${index === length - 1 ? "md:border-r" : ""}
  ${index > 0 && index < length - 1 && "md:border-x"}
  ${isMostPopular ? "mt-0" : "md:mt-16"}
`}
>
  <h1 class="text-primary text-2xl flex flex-col gap-2">
    {
      isMostPopular && (
        <div class="badge badge-primary self-end">Most popular</div>
      )
    }
    {title}
  </h1>
  <div class="grid grid-rows-4 h-full">
    <p class="font-light row-span-2">{description}</p>
    <div class="flex flex-col gap-2">
      <h2 class="text-xl">Features:</h2>
      <ul class="gap-1 flex flex-col">
        {
          (features || []).map((feature: string) => (
            <li class="font-light flex items-center gap-1 text-sm">
              <Icon name="mdi:check" class="text-secondary" /> {feature}
            </li>
          ))
        }
      </ul>
    </div>
    <a href={"/services/" + slug} class="btn btn-accent self-end">Learn more</a>
  </div>
</div>
