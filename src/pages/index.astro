---
import Layout from "../layouts/Layout.astro";

import config from "../config.json";
---

<Layout title={config.businessName}>
  <div>
    <section class="h-screen w-full pt-32">
      <div class="max-w-7xl mx-auto relative h-full">
        <div class="flex flex-col text-8xl">
          <h1 class="text-stone-500">Welcome to</h1>
          <h2 class="text-primary font-bold">{config.businessName}</h2>
        </div>
        <div
          class="max-w-xl absolute right-0 top-1/2 text-xl font-extralight text-right"
        >
          <p>
            {config.description}
          </p>
        </div>
      </div>
    </section>
  </div>
</Layout>
